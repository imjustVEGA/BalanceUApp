<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_soft"
    android:padding="20dp"
    android:fillViewport="true"
    tools:context=".ui.fragments.EstadoAnimoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿CÃ³mo te sientes hoy?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="28dp" />

        <RadioGroup
            android:id="@+id/rgEstadoAnimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbMuyFeliz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ˜„ Muy Feliz"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbFeliz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ™‚ Feliz"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbNeutral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ˜ Neutral"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbTriste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ˜” Triste"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbMuyTriste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ˜¢ Muy Triste"
                android:textSize="16sp"
                android:padding="12dp" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nota (opcional)"
            android:layout_marginBottom="24dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarEstadoAnimo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Guardar Estado de Ãnimo"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEstadoAnimoActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/accent_sage"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvEstadoAnimoActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="16dp" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

